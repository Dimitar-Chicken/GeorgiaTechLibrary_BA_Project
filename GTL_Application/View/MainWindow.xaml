<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTL_Application"
        xmlns:ViewModel="clr-namespace:GTL_Application.ViewModel" x:Class="GTL_Application.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.DataContext>
            <ViewModel:MainWindowViewModel/>
        </Grid.DataContext>
        <TextBlock HorizontalAlignment="Left" Margin="290,189,0,0" Text="{Binding Title}" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" DataContext="{Binding Mode=OneWay}"/>

    </Grid>
</Window>
